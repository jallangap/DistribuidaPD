<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Prueba de diagnostico</title>
    <link rel="stylesheet" href="css/styles.css">
</head>
<body>

    <header>
        <h1>Buscar</h1>
    </header>

    <main>
        <section class="buscador">
            <input type="text" id="pokemonInput" placeholder="Ingresa el Puchamon...">
            <button onclick="buscarPokemon()">Buscar</button>
        </section>

        <div id="resultado"></div>
    </main>

    <footer>
        <p>Universidad Central del Ecuador</p>
    </footer>

    <script>
        async function buscarPokemon() {
            const nombre = document.getElementById('pokemonInput').value.toLowerCase();
            const resultado = document.getElementById('resultado');

            try {
                const res = await fetch(`https://pokeapi.co/api/v2/pokemon/${nombre}`);
                if (!res.ok) throw new Error('No encontrado');
                const data = await res.json();

                resultado.innerHTML = `
                    <h2>${data.name.toUpperCase()}</h2>
                    <img src="${data.sprites.front_default}" alt="${data.name}">
                `;
            } catch (error) {
                resultado.innerHTML = `<p>Pok√©mon no encontrado</p>`;
            }
        }
    </script>

</body>
</html>
